<UserControl x:Class="FormgenAssistant.Controls.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FormgenAssistant.Controls"
             mc:Ignorable="d" Foreground="{x:Null}">

    <Viewbox Stretch="Fill">
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle x:Name="rectTrack" HorizontalAlignment="Center" Height="108" VerticalAlignment="Center" Width="237" RadiusX="60" RadiusY="60" Fill="MediumSlateBlue" MouseLeftButtonDown="rectTrack_MouseLeftButtonDown"/>
            <Ellipse x:Name="elipseHandle" HorizontalAlignment="Center" Height="90" VerticalAlignment="Center" Width="90" Fill="White" MouseLeftButtonDown="elipseHandle_MouseLeftButtonDown"/>
        </Grid>
    </Viewbox>
    
</UserControl>
